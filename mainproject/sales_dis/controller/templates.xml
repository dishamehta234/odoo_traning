    <template id="signup">
        <t t-call="web.layout">
            <t t-call="sales_dis.header">
            </t>
            <div class="container mt-5">
                <h1>SignUp Here</h1>
                <form action="/signup_submit" method="POST">
                    <div id="customer">
                        <h2 class="mb-3">Shopper Register</h2>
                        <div class="form-group">
                            <label for="fname">Name:</label>
                            <input type="text" class="form-control" placeholder="Enter Name" name="fname" id="fname" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="unm">Email:</label>
                            <input type="email" class="form-control" placeholder="Enter email" name="unm" id="unm" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="address">Address:</label>
                            <input type="text" class="form-control" placeholder="Enter Address" name="address" id="address" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="mobno">Mobile Number:</label>
                            <input type="text" class="form-control" placeholder="Enter Mobile Number" name="mobno" id="mobno" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="pass">Password:</label>
                            <input type="password" t-model="state.pwd" t-on-keyup="_onKeyUpPwd" class="form-control" placeholder="Enter password" name="pass" id="pass" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="repwd">Re-Enter Password:</label>
                            <input type="password" t-model="state.repwd" t-on-keyup="_onKeyUpRePwd" class="form-control" placeholder="Enter password" name="repwd" id="repwd" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="role">Role:</label>
                            <input type="text" class="form-control" value="Shopper" name="role" id="role" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="sname">Shop Name:</label>
                            <input type="text" class="form-control" placeholder="Enter Shop Name" name="sname" id="sname" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="sadd">Shop Address:</label>
                            <input type="text" class="form-control" placeholder="Enter Shop Address" name="sadd" id="sadd" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="szone">Shop Zone:</label>
                            <input type="text" class="form-control" placeholder="Enter Shop Zone" name="szone" id="szone" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="starget">Shop Target:</label>
                            <input type="text" class="form-control" placeholder="Enter Monthly Target" name="starget" id="starget" required="true"/>
                        </div>
                        <div class="form-group">
                            <label>Already Had An Account ??<br>
                                <a href="/login">Login Here</a></br>
                            </label>
                        </div>
                        <button type="submit" class="btn btn-secondary text-white ml-2">Register</button>
                    </div>
                </form>
            </div>

            <t t-call="sales_dis.footer">
            </t>
        </t>
    </template>
