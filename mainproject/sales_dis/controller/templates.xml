            <t t-call="sales_dis.header">
            </t>
            <div class="container">
                <div class="mt-5 mb-5">
                    <h1>Details of Payments</h1> 
                </div>
                <div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product No</th>
                                <th>Amount</th>
                                <th>Method</th>
                                <th>Cheque No</th>
                                <th>Bank Name</th>
                                <th>Remark</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="all_payment" t-as="all_payment">
                                <tr>
                                    <td><t t-esc="all_payment.P_id"/></td>
                                    <td><t t-esc="all_payment.p_amount"/></td>
                                    <td><t t-esc="all_payment.p_mthd"/></td>
                                    <td><t t-esc="all_payment.cheque_no"/></td>
                                    <td><t t-esc="all_payment.bank_name"/></td>
                                    <td><t t-esc="all_payment.p_remark"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
            <t t-call="sales_dis.footer">
            </t>
        </t>
    </template>
    <template id="do_payment">
        <t t-call="web.layout">
            <t t-call="sales_dis.header">
            </t>
                <div class="container">
                    <div class="d-flex justify-content-center h-100">
                        <div class="card">
                            <div class="card-header">
                                <h3 align="center">Payment</h3>
                            </div>
                            <div class="card-body">
                                <h3 align="center">Payment</h3>
                                <div class="d-flex justify-content-center links">
                                    see previous payments <a href="#">See List</a>
                                </div>
                                <p>Choose any Payment Method Either Cash or Cheque</p>
                                <div class="panel-group">
                                    <t t-esc="order_id">
                                    </t>
                                    <a class="btn btn-primary" onClick="location.href='/payment_by_cash'">Pay By Cash</a>
                                    <a class="btn btn-primary" onClick="location.href='/payment_by_cheque'">Pay By Cheque</a>
                                </div>                  
                                <div align="right">
                                    <button class="btn btn-primary mr-2 onClick=location.href='/login_page'">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <t t-call="sales_dis.footer">
            </t>
        </t>
    </template>
    <template id="payment_by_cash">
        <t t-call="web.layout">
            <t t-call="sales_dis.header">
            </t>
            <div class="card d-flex justify-content-center">
                <div class="card-header">
                    <h3 align="center">Payment</h3>
                </div>
                <div class="card-body">
                    <form action="/pay_cash" method="POST">                
                        <div id="paycash">
                            <h4><b>Payment By Cash</b></h4>
                            <div class="form-group">
                                <label for="cars">Enter Amount :</label>
                                <input type="text" class="form-control" name="amount" placeholder="Enter Amount" id="Amount"/>  
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary" >Cash</button>
                                <button class="btn btn-primary mr-2" onClick="location.href='/login_page'">Back</button>
                            </div>
                        </div>  
                    </form>
                </div>
            </div>
            <t t-call="sales_dis.footer">
            </t>
        </t>
    </template>

    <template id="payment_by_cheque">
        <t t-call="web.layout">
            <t t-call="sales_dis.header">
            </t>
            <div class="card d-flex justify-content-center">
                <div class="card-header">
                    <h3 align="center">Payment</h3>
                </div>
                <div class="card-body">
                    <form action="/pay_cheque">                
                        <div class="hideRadio" id="paycheque">
                            <h4><b>Payment By Cheque</b></h4>
                            <div class="form-group">
                                <p><u>Fill Information</u></p>
                                <input type="text" name="cheque" placeholder="check Number" id="cqnum"/>
                            </div>
                            <div class="form-group">
                                <input type="text" name="bankname" placeholder="Bank Name" id="bank"/>
                            </div>
                            <div class="form-group">
                                <input type="text" name="amount" placeholder="Amount" id="amnt"/>  
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Cheque</button>
                                <button class="btn btn-primary mr-2" onClick="location.href='/login_page'">Back</button>
                            </div>
                        </div> 
                    </form>
                </div>
            </div>
            <t t-call="sales_dis.footer">
            </t>
        </t>
    </template>
